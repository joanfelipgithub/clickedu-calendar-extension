{
  "manifest_version": 3,
  "name": "ClickEdu Calendar Overlay",
  "version": "1.0",
  "description": "Displays calendar events in an overlay when visiting ClickEdu for the first time in a session",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://insscf.clickedu.eu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "https://insscf.clickedu.eu/sumari/index.php*" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}